<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/landing_page"
    tools:context=".Dashboard">


    <Button
        android:id="@+id/logout"
        android:layout_width="89dp"
        android:layout_height="38dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/logout"
        android:elevation="16dp"
        android:text="Logout"
        android:textColor="#000000"
        android:textSize="15dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="237dp"
        android:layout_height="66dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/btn"
        android:elevation="20dp"
        android:orientation="vertical"
        android:padding="5dp"
        app:layout_constraintStart_toStartOf="@+id/linearLayout3"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/calistoga"
            android:gravity="center"
            android:text="Hello Christian"
            android:textColor="#473B3B"
            android:textSize="25sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="325dp"
        android:layout_height="314dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="30dp"
        android:layout_weight="3"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <LinearLayout
            android:layout_width="314dp"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:orientation="horizontal">


            <androidx.cardview.widget.CardView
                android:id="@+id/physical_activity"
                android:layout_width="145dp"
                android:layout_height="145dp"
                android:layout_gravity="center"
                android:backgroundTint="#86BCFF"
                app:cardCornerRadius="14dp">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="98dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="15dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/yoga" />

                <TextView
                    android:layout_width="153dp"
                    android:layout_height="40dp"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="2dp"
                    android:layout_marginBottom="5sp"
                    android:gravity="center"
                    android:text="Yoga Exercises"
                    android:textSize="17dp"
                    android:textStyle="bold" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/BreathingExercise"
                android:layout_width="153dp"
                android:layout_height="147dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:backgroundTint="#FBB579"
                app:cardCornerRadius="14dp">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="88dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="40sp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/breathing" />

                <TextView
                    android:layout_width="153dp"
                    android:layout_height="40dp"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="2dp"
                    android:layout_marginBottom="5sp"
                    android:gravity="center"
                    android:text="Breathing Exercise"
                    android:textSize="16dp"
                    android:textStyle="bold" />


            </androidx.cardview.widget.CardView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="314dp"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:orientation="horizontal">


            <androidx.cardview.widget.CardView
                android:id="@+id/notepad"
                android:layout_width="145dp"
                android:layout_height="157dp"
                android:layout_gravity="center"
                android:backgroundTint="#5BE9FB"
                android:elevation="50sp"
                app:cardCornerRadius="14dp">

                <ImageView
                    android:layout_width="110dp"
                    android:layout_height="92dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="15sp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/notepad" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="33dp"
                    android:layout_marginBottom="15sp"
                    android:gravity="center"
                    android:text="Notepad"
                    android:textSize="22dp"
                    android:textStyle="bold" />


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/MusicPlayer"
                android:layout_width="155dp"
                android:layout_height="157dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:backgroundTint="#FB8484"
                android:elevation="50sp"
                app:cardCornerRadius="14dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="14dp"
                    android:layout_marginBottom="15sp"
                    android:gravity="center"
                    android:text="Music Player"
                    android:textSize="22dp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/musicplayer"
                    android:layout_width="125dp"
                    android:layout_height="114dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10sp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/music_player" />


            </androidx.cardview.widget.CardView>


        </LinearLayout>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>